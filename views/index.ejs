<div class="card">  
    <h1>STOCK APP</h1>
    <form method="post" action="/submit">
        <select class="dropdown" name="stocks" >
            <option value="RELIANCE.BSE">RELIANCE</option>
            <option value="INFY.BSE">INFOSYS</option>
            <option value="TCS.BSE">TCS</option>
        </select>
        <input type="submit" value = "OK">
    </form>
    
    <%if(locals.price) {%>
        <h3><%=symbol%></h3>
        <div>
            <h5>Price</h5>
            <h2><%=price %></h2>
        </div>
        <div>
        <h5>Price Change</h5>
        <%if(Number(change)<0) { %>
            <h3 id="negative"><%=change %></h3>
        <%} else{ %>
            <h3 id="positive">+<%=change%></h3>
        <%} %>
        </div>
    <%}else{%>
        <h2>Select the stock</h2>
    <%}%>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
